@model TeacherVM

@{ 
    ViewBag.Title = "Index"; 
 }

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (Teacher teacher in Model.Teachers)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id"><img src="~/img/teacher/@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id">@teacher.Name</a></h2>
                            <h4>@teacher.TeacherAbout.Profession</h4>
                            <ul>
                                <li><a href="@teacher.TeacherAbout.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@teacher.TeacherAbout.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="@teacher.TeacherAbout.Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="@teacher.TeacherAbout.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
