@model FooterVM
<!-- Subscribe Start -->
<div class="subscribe-area pt-60 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="subscribe-content section-title text-center">
                    <h2>subscribe our newsletter</h2>
                    <p>I must explain to you how all this mistaken idea </p>
                </div>
                <div class="newsletter-form mc_embed_signup">
                    <form method="post" asp-controller="Subscribe" asp-action="Index">
                        <div id="mc_embed_signup_scroll" class="mc-form">
                            <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Enter your e-mail address" required>
                            <span asp-validation-for="@Model.Subscribe.Email" class="text-danger"></span>
                            <button asp-controller="Subscribe" asp-action="Index"  id="mc-embedded-subscribe" class="default-btn" type="submit" name="subscribe"><span>subscribe</span></button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Subscribe End -->
