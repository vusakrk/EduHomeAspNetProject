@using EduHomeAspNetProject.Models
@model IEnumerable<Slider>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider List</h4>
                <div class="col-12">
                    <a asp-action="Create" asp-controller="Slider" asp-area="Admin" class="btn btn-success">Create a new slider</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Slider Image
                                </th>
                                <th>
                                    Details
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider slider in Model)
                            {
                <tr>
                    <td class="py-1">
                        <img src="~/img/slider/@slider.Image" alt="Course" style="width:150px !important; height:100px !important; border-radius:0; border:2px solid black" />
                    </td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@slider.Id" asp-controller="Slider" asp-area="Admin" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                        <a asp-action="Edit" asp-route-id="@slider.Id" asp-controller="Slider" asp-area="Admin" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                        @if (Model.Count() > 3)
                        {

        <a asp-action="Delete" asp-route-id="@slider.Id" asp-controller="Slider" asp-area="AdminPanel" class="btn btn-danger"><i class=" mdi mdi-delete-forever "></i></a>
                        }
                    </td>
                </tr>}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
