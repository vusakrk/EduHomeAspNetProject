@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="margin-top:80px;">
    <h1 class="h3 mb-2 text-gray-800">Blog</h1>
    <div class="row">
        <div class="col-lg-12">
            <a href="@Url.Action("Create", "Blog")" class="btn btn-primary mb-4">Create</a>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-responsive" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Edits</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                <td>
                                    <img src="~/img/blog/@item.Image" alt="Alternate Text" width="100" />
                                </td>
                                <td>@item.Title.Substring(0,20)</td>
                                <td>@Html.Raw(item.Content.Substring(0,30))</td>
                                <td>
                                    <a asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id">
                                        <i class="fas fa-pen">Update</i>
                                    </a>

                                    <a onclick="return confirm('Are you sure?')" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-times">Delete</i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

