@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="margin-top:80px">
    <h1 class="h3 mb-2 text-gray-800">Course</h1>
    <div class="row">
        <div class="col-lg-12">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-4">Create</a>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-responsive" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>CourseDetail</th>
                            <th>CourseFeature</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {
                            i++;
                        <tr>
                            <td>@i</td>
                            <td>
                                <img src="~/img/course/@item.Image" alt="Alternate Text" width="100" />
                            </td>
                            <td>@i</td>
                            <td>@item.Id</td>
                            <td>@item.Image</td>
                            <td>@(item.Name) </td>
                            <td>@(item.Description.Substring(0,20)) </td>
                            <td>@(item.CourseDetail)
                            <td>@item.CourseFeature</td>
                            <td>
                                <a href="@Url.Action("Update", "Course", new { id=item.Id})">
                                    <i class="fas fa-pen"></i>
                                </a>

                                <a onclick="return confirm('Are you sure?')" href="@Url.Action("Delete", "Course", new { id=item.Id})">
                                    <i class="fas fa-times"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
